
public class AdditionExpression extends CompoundExpression  {
	private final char SIGN = '+';
	private String lExp;
	private String rExp;
	private String expWithSign;
	
	
	private double lValue;
	private double rValue;
	
	public AdditionExpression(Expression a , Expression b)
	{
		super(a,b , '+');
		lValue = a.calculate();
		rValue = b.calculate();
		
		/*lExp = a.getExpression();
		rExp = b.getExpression();*/
		//expWithSign = lExp + " + " + rExp;
	}

	public double calculate()
	{
		//System.out.println(this.getFExpression());
		/*
		double fNum = Double.parseDouble(this.getLExpression()); 
		double lNum = Double.parseDouble(this.getRExpression()); 

		return  fNum +lNum;*/
		
		return lValue + rValue;
	}
	
	public String toString()
	{
		return "The arithmetic expression is: " + super.getExpression(); 
	}
}
